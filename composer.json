{
    "name": "bolt/composer-install",
    "description": "Handles an install of Bolt with a few path customisations.",
    "license": "MIT",
    "repositories": [
        {"type": "vcs","url": "https://github.com/rossriley/bolt"}    
    ],
    
    "require": {
        "bolt/bolt": "dev-composer-installer-script"
    },
    "authors": [
        {
            "name": "Ross Riley",
            "email": "riley.ross@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    
    "scripts": {
        "post-create-project-cmd": [
            "Bolt\\Composer\\ScriptHandler::bootstrap"
        ]
    },

    
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        },
        "bolt-web-dir": "./",
        "bolt-app-dir": "./app"
    }
    
    
}
